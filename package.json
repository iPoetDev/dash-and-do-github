{
  "scripts": {
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prettier-djt": "prettier --write --plugin=prettier-plugin-django-alpine \"**/*.html\"",
    "test": "standard && node **.js | snazzy",
    "test-fix": "standard --fix && node **.js | snazzy",
    "validate": "html-validator templates --exclude=build,tmp --delay=200 --continue",
    "one-folder": "html-validator templates/index.html --exclude=build,tmp --delay=200",
    "all": "html-validator --quiet --exclude=build,tmp --delay=200",
    "one-file": "html-validator templates/*.html --exclude=build,tmp --delay=200",
    "continue": "html-validator templates/index.html --quiet --continue --exclude=build,tmp --delay=200",
    "server": "live-server --port=8005 --host=127.0.0.1 --watch=**/*.html,**/*.css,**/*.js  --wait=150",
    "build:tailwind": "npx tailwind -i static/css/tailwind.css -o static/css/tailwind-core3.css --watch",
    "min:tailwind": "npx tailwind -i static/css/tailwind.css -o static/css/tailwind-core.minify.css --minify",
    "post:tailwind": "npx tailwind -i static/css/tailwind.css -o static/css/ailwind-core.css --postcss --watch",
    "serve:tailwind": "live-server --port=8005 --host=127.0.0.1 --watch=**/*.html,**/*.css,**/*.js  --wait=250 & npx tailwind -i static/css/tailwind.css -o static/css/tailwind-core2.css --watch",
    "ws": "npx ws --hostname 127.0.0.1 --open"
  },
  "devDependencies": {
    "editorconfig": "^2.0.0",
    "eslint": "^8.51.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-module-utils": "^2.8.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-scope": "^7.2.2",
    "eslint-utils": "^3.0.0",
    "htmlhint": "^1.1.4",
    "prettier-plugin-django-alpine": "^1.2.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "standard": "^17.1.0",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-csstree-validator": "^3.0.0",
    "w3c-html-validator": "^1.5.1",
    "live-server": "^1.2.2",
    "local-web-server": "^5.3.0",
    "snazzy": "^9.0.0"
  },
  "browserslist": [
    ">0.3%, defaults and supports es6-module",
    "maintained node versions"
  ],
  "dependencies": {
    "htmx.org": "^1.9.6",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "tailwindcss-owl": "^2.0.0",
    "autoprefixer": "^10.4.16",
    "browserslist": "^4.22.1",
  },
  "standard": {
    "ignore": [
      "**/out/",
      "/lib/*",
      "tmp.js"
    ]
  }
}
